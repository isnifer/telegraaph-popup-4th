.popup
  position fixed
  top 0
  right 0
  bottom 0
  left 0
  z-index 9999
  display none

  &_state_visible
    display block

  &__wrapper
    background rgba(0,0,0,.8)
    width 100%
    height 100%
    position relative

  &__window
    position absolute
    width 500px
    height 300px
    top 50%
    left 50%
    margin -150px 0 0 -250px
    background #fff

  &__content-wrapper
    position relative
    padding 5px 10px 

  &__cross
    position absolute
    top 5px
    right 5px
    display block
    width 16px
    height 16px
    background url("data:image/png;base64,")
    text-indent -9999px
    position absolute
    cursor pointer

  &__header
    font bold 2em "Georgia"

  &__text
    margin 10px 0 0

    p
      margin 0 0 10px

    a
      color #0093ad